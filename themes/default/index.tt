<% USE page = Pagination(articles, current_page, entries_per_page) %>

<% FOREACH article IN page.page_data %>
<h2><a href="articles/<% article.link %>"><% article.title %></a></h2>
<p class="meta"><% article.date %> - Comments(<% article.nb_comments %>)</p>
<div class="entry">
    <% article.content %>
</div>
<% END %>
<div style="clear: both;">&nbsp;</div>

<br />

<% INCLUDE 'pagination.tt' %>
